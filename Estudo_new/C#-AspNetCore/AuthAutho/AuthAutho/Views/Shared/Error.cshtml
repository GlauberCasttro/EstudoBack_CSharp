@model ErrorViewModel
@{

    ViewData["Title"] = Model == null ? "Ocorreu um erro" : Model.Titulo;
}

@if (Model == null)
{
    <h2>
        <strong>Ops!!! Ocorreu um erro, mas não se preocupe. Nosso time será avisado em breve.</strong>
    </h2>
}
else
{
    <h1>
        @Html.Raw(Model.Titulo)
    </h1>
    <h2 class="text-danger"> @Html.Raw(Model.Mensagem)</h2>
    <h3>Código de erro: @Html.Raw(Model.ErroCode)</h3>
}
